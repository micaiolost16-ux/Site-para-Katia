  <script>
    for(let i=0;i<30;i++){
      let coracao = document.createElement('div');
      coracao.classList.add('coracao');
      coracao.style.left = Math.random() * 100 + 'vw';
      coracao.style.fontSize = (10 + Math.random() * 20) + 'px';
      coracao.style.animationDuration = (5 + Math.random() * 5) + 's';
      coracao.innerHTML = '❤';
      document.body.appendChild(coracao);
    }

    var dataInicio = new Date(2025, 7, 7, 20, 0, 0).getTime();

    setInterval(function() {
      var agora = new Date().getTime();
      var distancia = agora - dataInicio;

      var dias = Math.floor(distancia / (1000 * 60 * 60 * 24));
      var horas = Math.floor((distancia % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      var minutos = Math.floor((distancia % (1000 * 60 * 60)) / (1000 * 60));
      var segundos = Math.floor((distancia % (1000 * 60)) / 1000);

      document.getElementById("contador").innerHTML =
        dias + " dias " + horas + "h " + minutos + "m " + segundos + "s ❤";
    }, 1000);
  </script>

